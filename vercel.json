{
  "crons": [
    {
      "path": "/api/cron/ml-resolve-sec",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/cron/ml-prices?offset=0&limit=10",
      "schedule": "5 12 * * *"
    },
    {
      "path": "/api/cron/sync-products-prices",
      "schedule": "10 12 * * *"
    },
    {
      "path": "/api/cron/shopee-prices?offset=0&limit=25",
      "schedule": "15 12 * * *"
    }
  ],
  "functions": {
    "api/**/*.ts": { "maxDuration": 300 }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/go/:store/:slug", "destination": "/api/go?store=:store&slug=:slug" },
    { "source": "/sitemap.xml", "destination": "/api/sitemap.xml" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
